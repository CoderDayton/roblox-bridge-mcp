{
  "name": "roblox-bridge-mcp",
  "version": "1.0.0",
  "description": "MCP bridge connecting AI to Roblox Studio for real-time world building",
  "type": "module",
  "main": "src/index.ts",
  "bin": {
    "roblox-bridge-mcp": "./src/index.ts"
  },
  "files": [
    "src",
    "plugin",
    "README.md",
    "LICENSE"
  ],
  "author": "Dayton Dunbar <coderdayton14@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/CoderDayton/roblox-bridge-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/CoderDayton/roblox-bridge-mcp/issues"
  },
  "homepage": "https://github.com/CoderDayton/roblox-bridge-mcp#readme",
  "keywords": [
    "mcp",
    "roblox",
    "studio",
    "ai",
    "bridge",
    "fastmcp",
    "claude",
    "model-context-protocol"
  ],
  "scripts": {
    "dev": "bun run src/index.ts",
    "inspect": "bunx fastmcp inspect src/index.ts",
    "typecheck": "tsc --noEmit",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "format": "bunx prettier --write .",
    "format:check": "bunx prettier --check .",
    "prepare": "lefthook install",
    "prepublishOnly": "bun run typecheck && bun test"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "fastmcp": "^1.20.5",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "lefthook": "^2.0.15",
    "typescript": "^5.8.3"
  }
}
